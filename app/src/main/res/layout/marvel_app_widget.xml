<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widget_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:hint="@string/team_name_title"
        android:textSize="@dimen/team_name_text_size" />

    <Button
        android:id="@+id/update_widget_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/widget_team_name"
        android:text="@string/update_button" />

    <StackView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/team_widget_stack_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:loopViews="true"
        android:layout_below="@id/widget_team_name" />

</RelativeLayout>